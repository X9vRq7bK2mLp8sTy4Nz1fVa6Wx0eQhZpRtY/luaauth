# core
MONGO_URI=mongodb+srv://<user>:<pass>@cluster.mongodb.net/?retryWrites=true&w=majority
DB_NAME=lua_protect_db_full
PORT=3000

# collections - unique names so no collisions
SCRIPTS_COLLECTION=existing_scripts_collection   # <-- set to your existing scripts collection name (read-only)
RUNS_COLLECTION=lua_one_use_runs_full
ADMINS_COLLECTION=lua_admins_full

# admin default creds (you can change later)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin

# token behaviour
RUN_TOKEN_BYTES=16
TOKEN_TTL_MS=30000

# UA patterns and behavior
ALLOWLISTED_UA_PATTERNS=synapse,krnl,fluxus,script-ware,scriptware,sentinel,executor,roblox,exploit,electron
DISALLOW_BROWSER_UA=true

# ui / security
ALLOW_CREATE_FROM_UI=true  # allow admin create from web ui (true)
